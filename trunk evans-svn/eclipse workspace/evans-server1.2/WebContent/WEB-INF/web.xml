<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
	<!-- WELCOME FILES  -->
	<display-name>evans-server1.2</display-name>
 		<welcome-file-list>
    	<welcome-file>index.html</welcome-file>
    	<welcome-file>index.jsp</welcome-file>
  	</welcome-file-list>
  	<!-- SESSION TIMEOUT CONFIGS  -->
  	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<!-- CONTEXT PARAMETERS (CONSTANTS)  -->
	<context-param>
  		<param-name>server-hostname</param-name>
  		<param-value>http://189.121.28.76:8080</param-value>
	</context-param>
	
  	<!-- ARDUINO CONNECTION SINGLETON FACTORY -->
  	<resource-env-ref>
    	<description>
			Factory for the Arduino Connection
		</description>
    	<resource-env-ref-name>
			arduino/ArduinoConnectionFactory
		</resource-env-ref-name>
    	<resource-env-ref-type>
			br.com.evans.jndi.arduino.ArduinoConnection
		</resource-env-ref-type>
  	</resource-env-ref>
  	
  	<!-- DEVICE MONITOR SINGLETON FACTORY -->
  	<resource-env-ref>
    	<description>
			Factory for EVANS Device Monitor
		</description>
    	<resource-env-ref-name>
			states/DeviceMonitorFactory
		</resource-env-ref-name>
	    <resource-env-ref-type>
			br.com.evans.jndi.states.DeviceMonitor
		</resource-env-ref-type>
  	</resource-env-ref>
  	
  	<!-- MUSIC PLAYER SINGLETON FACTORY -->
  	<resource-env-ref>
    	<description>
			Factory for EVANS Music Player
		</description>
	    <resource-env-ref-name>
			music/MusicPlayerFactory
		</resource-env-ref-name>
    	<resource-env-ref-type>
			br.com.evans.jdni.music.MusicPlayer
		</resource-env-ref-type>
  	</resource-env-ref>
  	
  	<!-- MONGODB CONNECTION SINGLETON FACTORY -->
  	<resource-env-ref>
    	<description>
			Factory for EVANS MongoDB NOSQL Connection
		</description>
    	<resource-env-ref-name>
			db/MongoDBConnectionFactory
		</resource-env-ref-name>
	    <resource-env-ref-type>
			br.com.evans.jndi.db.MongoDBConnection
		</resource-env-ref-type>
  	</resource-env-ref>
  	
  	<!-- FILTER SERVLETS -->
  	<filter>
    	<filter-name>SessionFilter</filter-name>
    	<filter-class>
			br.com.evans.servlet.filters.SessionFilter
		</filter-class>
    	<init-param>
      		<param-name>avoid-urls</param-name>
      		<param-value>/index.jsp,/login.jsp</param-value>
    	</init-param>
  	</filter>
  	<filter-mapping>
    	<filter-name>SessionFilter</filter-name>
   		<url-pattern>/*, -/reverseAjax</url-pattern> <!-- chain isn't supported by asynchronous call, so don't filter -->
  	</filter-mapping>
</web-app>